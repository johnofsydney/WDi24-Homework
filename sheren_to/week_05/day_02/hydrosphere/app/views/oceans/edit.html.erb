
<h2>Edit Ocean</h2>

<form action="<%= ocean_path(@ocean.id) %>" method="post">

  Name: <input type="text" name="name" value="<%= @ocean.name %>" autofocus>
  Image: <input type="url" name="image" value="<%= @ocean.image %>" >
  Surface Area: <input type="number" name="area" value="<%= @ocean.area %>" >
  Average Depth: <input type="number" name="depth" value="<%= @ocean.depth %>" >

  <button>Edit Ocean</button>

</form>
