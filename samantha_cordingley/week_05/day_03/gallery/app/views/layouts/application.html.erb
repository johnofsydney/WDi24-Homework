<!DOCTYPE html>
<html>
  <head>
    <title>Gallery</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:300,500,600" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="left"></div>
    <div id="right"></div>
    <div id="top"></div>
    <div id="bottom"></div>

    <nav>
      <%= link_to 'Latest 10', works_path %>
      <%= link_to 'Add Work', new_work_path %>
      <%= link_to 'Artist Index', artists_path %>
      <%= link_to 'New Artist', new_artist_path %>
    </nav>

    <%= yield %>
  </body>
</html>
